<p id="notice"><%= notice %></p>
<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Numéro de commande</th>
        <th scope="col">Chaton adopté</th>
        <th scope="col">Montant TTC</th>
        <th scope="col">Quantité</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @order.order_items.each do |order_item| %>
        <tr>
          <td>Order #<%= @order.id %></td>
          <td><%= order_item.item.title %></td>
          <td><%= order_item.item.price %> <a> € </a></td>
          <td><%= order_item.quantity %> </td>
          <td> <%=link_to "Tu souhaites racheter ?", item_path(order_item.item.id), class:'btn btn-primary'%> </td>
        </tr>
      <%end%>
    </tbody>
    <tfoot style="font-weight: bold">
      <td>Montant total :</td>
      <td> <%= @order.total_amount %> <a> € </a> </td>
    </tfoot>
  </table>
</div>
